{
  "name": "@acme/react",
  "version": "0.0.0",
  "sideEffects": false,
  "main": "./index.tsx",
  "module": "./index.tsx",
  "types": "./index.tsx",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently npm:dev:ladle npm:dev:tsup",
    "dev:ladle": "FORCE_COLOR=1 ladle serve",
    "dev:tsup": "FORCE_COLOR=1 tsup index.tsx --format esm,cjs --external react --dts --watch",
    "build": "yarn build:components && yarn build:ladle",
    "build-preview": "ladle build && ladle preview -p 61000",
    "preview": "ladle preview -p 61000",
    "build:components": "tsup index.tsx --format esm,cjs --external react --dts",
    "build:ladle": "ladle build",
    "test:unit": "vitest run",
    "test:dev": "start-server-and-test dev 61000 'yarn playwright test ./tests/snapshot.spec.ts'",
    "test": "start-server-and-test preview 61000 'yarn playwright test ./tests/snapshot.spec.ts'",
    "test:update": "start-server-and-test build-preview 61000 'yarn playwright test ./tests/snapshot.spec.ts -u'"
  },
  "dependencies": {
    "@headlessui/react": "1.7.3",
    "@heroicons/react": "2.0.12",
    "@ladle/react": "2.4.5",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.7",
    "autoprefixer": "10.4.13",
    "clsx": "1.2.1",
    "framer-motion": "7.6.4",
    "postcss": "8.4.18",
    "tailwind-merge": "1.7.0",
    "tailwindcss": "3.2.1"
  },
  "devDependencies": {
    "@acme/eslint-config-custom": "*",
    "@acme/tailwind-preset": "*",
    "@acme/tokens": "*",
    "@acme/tsconfig": "*",
    "@playwright/test": "1.27.1",
    "@swc/core": "1.3.11",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/sync-fetch": "0.4.0",
    "concurrently": "7.5.0",
    "eslint": "8.26.0",
    "jsdom": "20.0.2",
    "prettier-plugin-tailwindcss": "0.1.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "start-server-and-test": "1.14.0",
    "sync-fetch": "0.4.2",
    "tsup": "6.3.0",
    "typescript": "4.8.4",
    "vitest": "0.24.5"
  }
}
