{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },

    "@acme/tokens#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "@acme/tailwind-preset#build": {
      "dependsOn": ["^build", "@acme/tokens#build"],
      "outputs": ["dist/**"]
    },

    "@acme/react#build": {
      "dependsOn": ["^build", "@acme/tokens#build", "@acme/tailwind-preset#build"],
      "outputs": ["dist/**", "build/**"]
    },

    "dev": {
      "cache": false
    },

    "test": {
      "cache": false
    }
  }
}
