    "@vercel/node": "2.5.22",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.2",
    "@remix-run/eslint-config": "1.7.2",
    "@remix-run/serve": "1.7.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "10.4.12",
    "concurrently": "7.4.0",
    "eslint": "8.24.0",
    "postcss": "8.4.17",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.4"
  },
  "engines": {
